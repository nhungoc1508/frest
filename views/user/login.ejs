<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/forms.css">
<div class="container-fluid d-flex w-100 mx-auto flex-column">
    <div class="row">
        <div class="col-md-6 d-flex flex-column" id="left-section-login">
            <div class="mb-auto"></div>
            <h2 class="text-center text-light">Welcome back! Log in to continue shopping.</h2>
            <div class="mt-auto"></div>
        </div>
        <div class="col-12 col-md-6 justify-content-center" id="right-section-login">
            <div class="col-10 my-5 text-center p-3 mx-auto d-flex flex-column" id="register-card">
                <div class="mb-auto"></div>
                <div class="container">
                    <h2>Log in</h2>
                    <form action="/login" method="POST" class="needs-validation lead mt-3" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" name="username" id="username" autofocus
                                required>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" name="password" id="password" required>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <button class="mt-3 btn custom-btn">Log in</button>
                    </form>
                </div>
                <div class="mt-auto"></div>
            </div>
        </div>
    </div>
</div>
<div class="container justify-content-center align-items-center my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title text-center">Login</h2>
                    
                </div>
            </div>
        </div>
    </div>
</div>