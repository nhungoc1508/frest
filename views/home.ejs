<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/home.css">
<div class="container-fluid d-flex w-100 h-75 mx-auto flex-column" id="parallax">
    <div class="mb-auto"></div>
    <div class="text-center">
        <h1 class="text-light">
            <%=currentUser ? "Welcome back!" : "Start today!"%>
        </h1>
        <h4 class="text-light">Everything you need, at your doorstep.</h4>
    </div>
    <div class="mt-auto"></div>
</div>
<section class="w-100">
    <div class="container-fluid d-flex flex-column banner text-center" id="featured-banner">
        <h3 class="lead">FEATURED PRODUCTS</h3>
    </div>
    <div class="container py-3 scroll-menu d-flex d-grid gap-2">
        <!-- <div class="d-flex flex-row flex-wrap justify-content-around"> -->
        <!-- <div class="scroll-menu"> -->
        <%- include('./partials/product-cards') %>
        <!-- </div> -->
    </div>
</section>
<section class="w-100">
    <div class="container-fluid d-flex flex-column banner text-center" id="promotions-banner">
        <h3 class="lead">ONGOING PROMOTIONS</h3>
    </div>
    <div class="container-fluid w-100 py-5">
        <div class="row justify-content-center pb-5">
            <div class="col-10 col-md-8 row promotions-card">
                <div class="col-12 col-sm-6 d-flex justify-content-center promotions-img-ctn left">
                    <img class="left" src="https://images.unsplash.com/photo-1498837167922-ddd27525d352?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2850&q=80" alt="">
                </div>
                <div class="col-12 col-sm-6 mx-auto d-flex flex-column promotions-content-ctn">
                    <div class="mb-auto"></div>
                    <div class="text-center">
                        <h3 class="lead">Farmers' Market Greens</h3>
                        <h4><span class="badge bg-info">15% off</span></h4>
                        <p>for a variety of vegetables products!</p>
                    </div>
                    <div class="mt-auto text-center">
                        <a href="/products?category=vegetables">Shop now!</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center pb-5">
            <div class="col-10 col-md-8 row promotions-card">
                <div class="col-12 col-sm-6 mx-auto d-flex flex-column promotions-content-ctn">
                    <div class="mb-auto"></div>
                    <div class="text-center">
                        <h3 class="lead">Fresh Summer</h3>
                        <h4><span class="badge bg-info">Free shipping</span></h4>
                        <p>for all orders of fruits and juice above AED 100!</p>
                    </div>
                    <div class="mt-auto text-center">
                        <a href="/products?category=fruits">Shop now!</a>
                    </div>
                </div>
                <div class="col-12 col-sm-6 d-flex justify-content-center promotions-img-ctn right">
                    <img class="right" src="https://images.unsplash.com/photo-1595981267035-7b04ca84a82d?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2850&q=80" alt="">
                </div>
            </div>
        </div>
    </div>
</section>
<section class="w-100 h-100" id="about-us">
    <div class="container-fluid d-flex flex-column banner text-center" id="about-banner">
        <h3 class="lead">ABOUT US</h3>
    </div>
    <div class="container-fluid d-flex w-100 mx-auto flex-column">
        <div class="row">
            <div class="col-md-6 d-flex flex-column" id="left-section-about">
                <div class="mb-auto"></div>
                <h2 class="text-center text-light">Everything you need, at your doorstep. Start today!</h2>
                <div class="mt-auto"></div>
            </div>
            <div class="col-12 col-md-6 justify-content-center" id="right-section-about">
                <div class="col-10 my-5 p-3 mx-auto d-flex flex-column text-center info-card">
                    <div class="mb-auto"></div>
                    <div>
                        <h4>Grocery made easy</h4>
                        <p class="lead text-muted">The one-stop-shop solution for grocery shopping.</p>
                        <div class="m-3">
                            <p class="lead"><i class="fas fa-shopping-cart"></i> Wide range of choices</p>
                            <p class="lead"><i class="fas fa-tags"></i> Best product value</p>
                            <p class="lead"><i class="fas fa-credit-card"></i> Flexible payment</p>
                            <p class="lead"><i class="fas fa-shipping-fast"></i> Express delivery</p>
                        </div>
                    </div>
                    <div class="mt-auto"></div>
                </div>
            </div>
        </div>
    </div>
</section>